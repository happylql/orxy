{
  "name": "orxy",
  "version": "1.0.0",
  "description": "A platform for managing games.",
  "author": "happylql",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development DEBUG=nuxt:* nodemon -w server -w nuxt.config.js server/index.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "nuxt build",
    "build:server": "rimraf dist/server && cpx '{nuxt.config.js,server/**}' dist",
    "start": "cross-env NODE_ENV=production node dist/server/index.js",
    "analyze": "nuxt build --analyze",
    "generate": "nuxt generate",
    "test": "jest"
  },
