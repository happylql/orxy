    "koa": "^2.6.2",
    "koa-body": "^2.3.0",
    "koa-compose": "^4.0.0",
    "koa-compress": "^2.0.0",
    "koa-connect": "^2.0.1",
    "koa-generic-session": "^2.0.1",
    "koa-passport": "^4.1.1",
    "koa-redis": "^3.1.3",
    "koa-router": "^7.4.0",
    "mongoose": "^5.3.7",
    "nodemailer": "^4.6.8",
